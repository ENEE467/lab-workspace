{
	"remoteUser": "467-terp",
	"workspaceMount": "source=${localEnv:HOME}/${localWorkspaceFolderBasename},target=/home/467-terp/${localWorkspaceFolderBasename},type=bind",
	"workspaceFolder": "/home/467-terp/${localWorkspaceFolderBasename}",

  // Arguments to pass while building the image
  "build": {
    "target": "base", // Options: base, nvidia, amd

    // "args": {    // Uncomment only for AMD GPU
		// 	"ROCM_VERSION": "5.7",
		// 	"AMDGPU_VERSION": "5.7",
		// 	"APT_PREF": "Package: *\nPin: release o=repo.radeon.com\nPin-Priority: 600"
		// },

    "dockerfile": "Dockerfile"
	},

  // Arguments to pass while running the container
  "runArgs": [
		"--network=host",
		"--cap-add=SYS_PTRACE",
		"--security-opt=seccomp:unconfined",
		"--security-opt=apparmor:unconfined",
		"--volume=/tmp/.X11-unix:/tmp/.X11-unix",
		"--volume=/run/user:/run/user",
		"--volume=/dev:/dev:rw",
		"--ipc=host",
    // "--gpus=all",  // Uncomment only for NVIDIA GPU
		"--device=/dev/dri",
    "--device=/dev/kfd",
		"--device=/dev/video0",
    "--group-add=video"
	],

  "postCreateCommand": "bash .devcontainer/setup.sh",

  // Environment variables in the container
	"remoteEnv": {
		"DISPLAY": "${localEnv:DISPLAY}",
		"XDG_RUNTIME_DIR": "${localEnv:XDG_RUNTIME_DIR}",
		"PULSE_SERVER": "${localEnv:PULSE_SERVER}",
		"LIBGL_ALWAYS_SOFTWARE": "1",
    "ROS_WS": "/home/${containerEnv:USER}/${localWorkspaceFolderBasename}"
	},

	// Set *default* container specific settings.json values on container create.
	"customizations": {
		"vscode": {
			"settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
				"cmake.configureOnOpen": false,

        "python.analysis.extraPaths": [
					"/opt/ros/humble/lib/python3.10/site-packages",
					"/opt/ros/humble/local/lib/python3.10/site-packages"
				],

        "C_Cpp.default.intelliSenseMode": "linux-gcc-x86",
				"C_Cpp.formatting": "disabled",
				"C_Cpp.default.compilerPath": "/usr/bin/gcc",

        "ros.distro": "humble",

        "search.exclude": {
          "**/node_modules": true,
          "**/bower_components": true,
          "**/*.code-search": true,
          "**/build": true,
          "**/install": true,
          "**/log": true
        }
			},
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"ms-iot.vscode-ros",
				"ms-python.python",
				"cschlosser.doxdocgen",
				"redhat.vscode-yaml",
				"twxs.cmake",
				"ms-vscode.cmake-tools",
				"yzhang.markdown-all-in-one"
			]
		}
	}
}
